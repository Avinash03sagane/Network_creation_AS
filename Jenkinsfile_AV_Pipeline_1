pipeline {
    agent any

    stages {
        stage('git checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Avinash03sagane/Network_creation_AS.git'
            }
        }
        stage('terraform init phase') {
            steps {
                sh 'terraform init'
            }
        }
        stage('terraform plan phase') {
            steps {
                sh 'terraform plan -out $BUILD_NUMBER'
            }
        }
        stage('terraform apply phase') {
            steps {
                sh 'terraform apply  $BUILD_NUMBER'
            }
        }
    }
}
